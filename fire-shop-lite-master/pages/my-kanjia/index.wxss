.top-header {
  border-bottom: 0;
}

.container {
  width: 100%;
  height: 100%;
}

.header-container {
  background-color: #fff;
}

.iphone {
  margin-top: 180rpx;
}

.tab-header {
  width: 100%;
  padding-top: 10px;
  background-color: #fff;
}

.tab-header view {
  display: inline-block;
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  border-bottom: 1px solid #f5f5f5;
  height: 35px;
  font-weight: 300;
}

.tab-header .active {
  color: #b5272d;
  border-bottom: 1px solid #b5272d;
}

.tab-container {
  width: 100%;
  line-height: 160%;
}

.tab-container .tab-item {
  width: 100%;
  display: none;
}

.tab-container .tab-item.active {
  display: block;
}

.tab-item-list {
  background-color: #fff;
  margin-top: 10px;
  padding: 10px;
  height: 100px;
  border-bottom: 1px solid #f5f5f5;
}

.tab-item-list image {
  width: 100px;
  height: 100px;
  float: left;
  border-radius: 6rpx;
}

.tab-item-list-info {
  width: 63%;
  padding-left: 10px;
  float: left;
  font-size: 30rpx;
  color: #333;
}

.list-info-title {
  width: 100%;
  font-weight: 500;
  float: ledt;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.list-info-money {
  font-size: 26rpx;
  color: #666;
}

.money-min, .money-max {
  display: inline-block;
}

.money-min text {
  font-size: 28rpx;
  color: #b5272d;
}

.money-max {
  padding-left: 15px;
  color: #999;
  text-decoration: line-through;
}

.list-info-info {
  font-size: 26rpx;
  color: #b5272d;
}
